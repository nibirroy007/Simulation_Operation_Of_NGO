<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="500.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/23" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.simulation_operations_of_an_ngo.Nibir.MediaOfficer.PatientRecordsController">

    <children>
        <Label layoutX="260.0" layoutY="10.0" text="Patient Records">
            <font><Font size="26.0" /></font>
        </Label>
        <Label layoutX="14.0" layoutY="60.0" text="Search:">
            <font><Font size="16.0" /></font>
        </Label>
        <TextField fx:id="searchTextField" layoutX="80.0" layoutY="58.0" prefWidth="200.0" />
        <Label layoutX="300.0" layoutY="60.0" text="Filter by Gender:" />
        <ComboBox fx:id="filterGenderComboBox" layoutX="415.0" layoutY="58.0" prefWidth="120.0" />
        <Button layoutX="550.0" layoutY="58.0" onAction="#handleFilterButton" text="Apply" />
        <Label layoutX="14.0" layoutY="105.0" text="Patient ID">
            <font><Font size="16.0" /></font>
        </Label>
        <TextField fx:id="patientIdTextField" layoutX="110.0" layoutY="102.0" prefWidth="150.0" />

        <Label layoutX="280.0" layoutY="105.0" text="Full Name">
            <font><Font size="16.0" /></font>
        </Label>
        <TextField fx:id="patientNameTextField" layoutX="370.0" layoutY="102.0" prefWidth="200.0" />

        <Label layoutX="14.0" layoutY="145.0" text="Gender">
            <font><Font size="16.0" /></font>
        </Label>
        <ComboBox fx:id="genderComboBox" layoutX="110.0" layoutY="142.0" prefWidth="150.0" />

        <Label layoutX="280.0" layoutY="145.0" text="Phone">
            <font><Font size="16.0" /></font>
        </Label>
        <TextField fx:id="phoneTextField" layoutX="370.0" layoutY="142.0" prefWidth="200.0" />

        <Label layoutX="14.0" layoutY="185.0" text="Diagnosis">
            <font><Font size="16.0" /></font>
        </Label>
        <TextField fx:id="diagnosisTextField" layoutX="110.0" layoutY="182.0" prefWidth="460.0" />

        <Label layoutX="14.0" layoutY="225.0" text="Treatment">
            <font><Font size="16.0" /></font>
        </Label>
        <TextField fx:id="treatmentTextField" layoutX="110.0" layoutY="222.0" prefWidth="460.0" />
        <Button layoutX="600.0" layoutY="182.0" onAction="#handleNewRecordButton" text="New Record" />
        <Button layoutX="600.0" layoutY="222.0" onAction="#handleSaveButton" text="Save / Update" />
        <Button layoutX="705.0" layoutY="222.0" onAction="#handleShowAllButton" text="Show All" />
        <TableView fx:id="patientTableView" layoutX="14.0" layoutY="270.0" prefHeight="210.0" prefWidth="772.0">
            <columns>
                <TableColumn fx:id="colPatientId" prefWidth="90.0" text="Patient ID" />
                <TableColumn fx:id="colPatientName" prefWidth="140.0" text="Full Name" />
                <TableColumn fx:id="colGender" prefWidth="80.0" text="Gender" />
                <TableColumn fx:id="colPhone" prefWidth="120.0" text="Phone" />
                <TableColumn fx:id="colDiagnosis" prefWidth="170.0" text="Diagnosis" />
                <TableColumn fx:id="colTreatment" prefWidth="170.0" text="Treatment" />
            </columns>
        </TableView>
    </children>
</AnchorPane>
