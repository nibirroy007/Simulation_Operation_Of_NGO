<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="500.0" prefWidth="800.0"
            xmlns="http://javafx.com/javafx/23"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.simulation_operations_of_an_ngo.Nibir.SystemAdministor.SoftwareUpdateController">

    <children>
        <Label layoutX="210.0" layoutY="10.0" text="SoftwareUpdatePatchManagement">
            <font><Font size="26.0"/></font>
        </Label>

        <Button layoutX="20.0" layoutY="70.0" text="Check for Updates" onAction="#handleCheckUpdatesButton"/>

        <TableView fx:id="updateTableView" layoutX="20.0" layoutY="100.0"
                   prefWidth="760.0" prefHeight="260.0">
            <columns>
                <TableColumn fx:id="colComponent" text="Component" prefWidth="200.0"/>
                <TableColumn fx:id="colCurrentVersion" text="Current Version" prefWidth="150.0"/>
                <TableColumn fx:id="colNewVersion" text="Available Version" prefWidth="150.0"/>
                <TableColumn fx:id="colImportance" text="Importance" prefWidth="120.0"/>
                <TableColumn fx:id="colSelected" text="Update?" prefWidth="140.0"/>
            </columns>
        </TableView>

        <Label layoutX="20.0" layoutY="370.0" text="Components to Update:"/>
        <TextField fx:id="selectedComponentsTextField" layoutX="160.0" layoutY="366.0"
                   prefWidth="380.0" editable="false"/>

        <Button layoutX="20.0" layoutY="400.0" text="Validate Compatibility" onAction="#handleValidateCompatibilityButton"/>
        <Button layoutX="190.0" layoutY="400.0" text="Run Update" onAction="#handleRunUpdateButton"/>

        <CheckBox fx:id="restartRequiredCheckBox" layoutX="380.0" layoutY="403.0"
                  text="Restart required after update" disable="true"/>

        <Label layoutX="20.0" layoutY="440.0" text="Update Log:"/>
        <Label fx:id="updateLogLabel" layoutX="100.0" layoutY="440.0" prefWidth="680.0"/>
    </children>
</AnchorPane>
